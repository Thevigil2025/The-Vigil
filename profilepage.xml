<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/linearLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ececec">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="426dp"
                    android:layout_height="962dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/untitled_design_removebg_preview"
                    tools:layout_editor_absoluteY="-116dp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="159dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="196dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageview"
                    app:layout_constraintVertical_bias="0.093"
                    app:srcCompat="@drawable/human" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="420dp"
                    android:layout_height="518dp"
                    android:alpha="0.4"
                    app:srcCompat="@drawable/drone"
                    tools:layout_editor_absoluteX="-10dp"
                    tools:layout_editor_absoluteY="212dp" />
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="149dp"
                    android:layout_height="46dp"
                    android:text="id_name"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="@+id/imageview"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.01" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="email_id"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    tools:layout_editor_absoluteX="179dp"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="386dp"
                    android:layout_height="735dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-6dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="310dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/btn_bg"
                    android:text="Account Settings"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="48dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="310dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="320dp"
                    android:background="@drawable/btn_bg"
                    android:text="Come Meet Us"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="50dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="310dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="224dp"
                    android:background="@drawable/btn_bg"
                    android:text="Contact Us"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="50dp"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="310dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="128dp"
                    android:background="@drawable/btn_bg"
                    android:text="My reviews"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:layout_editor_absoluteX="48dp"
                    tools:ignore="MissingConstraints" />

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomNav"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:menu="@menu/menu" />
            </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>